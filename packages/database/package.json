{
	"dependencies": {
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "^6.8.2",
		"@repo/config": "workspace:*",
		"drizzle-orm": "^0.44.1",
		"drizzle-zod": "^0.8.2",
		"nanoid": "^5.1.2",
		"pg": "^8.16.0",
		"zod": "^3.25.48"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "24.5.2",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.4",
		"prisma": "^6.16.2",
		"prisma-json-types-generator": "^3.6.1",
		"zod-prisma-types": "^3.2.4"
	},
	"main": "./index.ts",
	"name": "@repo/database",
	"scripts": {
		"generate": "prisma generate --no-hints --schema=./prisma/schema.prisma",
		"push": "dotenv -c -e ../../.env -- prisma db push --skip-generate --schema=./prisma/schema.prisma",
		"migrate": "dotenv -c -e ../../.env -- prisma migrate dev --schema=./prisma/schema.prisma",
		"studio": "dotenv -c -e ../../.env -- prisma studio --schema=./prisma/schema.prisma",
		"type-check": "tsc --noEmit"
	},
	"types": "./**/.tsx",
	"version": "0.0.0"
}
